{
  "expo": {
    "name": "app-firmware",
    "slug": "app-firmware",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.appfirmware",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription":
          "LiquorBot needs Bluetooth to discover and connect to your LiquorBot dispenser.",
        "NSBluetoothPeripheralUsageDescription":
          "LiquorBot uses Bluetooth to communicate with your LiquorBot dispenser."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.appfirmware"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-ble-plx",
        {
          "bluetoothAlwaysPermission":
            "LiquorBot needs Bluetooth to discover and connect to your LiquorBot dispenser."
        },
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
