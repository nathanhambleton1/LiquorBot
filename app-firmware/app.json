{
  "expo": {
    "name": "LiquorBot",
    "slug": "liquorbot",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "liquorbotapp",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "primaryColor": "#CE975E",
    "splash": {
      "image": "./assets/images/home-background.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#141414"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nathanhambleton.liquorbot",
      "associatedDomains": [
        "applinks:main.dxqquq649m247.amplifyapp.com"
      ],
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "LiquorBot needs Bluetooth to discover and connect to your LiquorBot dispenser.",
        "NSBluetoothPeripheralUsageDescription": "LiquorBot uses Bluetooth to communicate with your LiquorBot dispenser.",
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIStatusBarStyle": "UIStatusBarStyleLightContent",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSUserNotificationAlertStyle": "alert"
      },
      "splash": {
        "image": "./assets/images/home-background.jpg",
        "resizeMode": "contain",
        "backgroundColor": "#141414"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#141414"
      },
      "package": "com.nathanhambleton.liquorbot",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "splash": {
        "image": "./assets/images/home-background.jpg",
        "resizeMode": "contain",
        "backgroundColor": "#141414"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-ble-plx",
        {
          "bluetoothAlwaysPermission": "LiquorBot needs Bluetooth to discover and connect to your LiquorBot dispenser."
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#141414"
        }
      ],
      "expo-asset",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "2998de15-4c52-4397-904d-b7278c2d2e85"
      }
    }
  }
}
